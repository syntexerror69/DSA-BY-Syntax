
Question  :  https://leetcode.com/problems/two-sum-ii-input-array-is-sorted/description/


#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;

vector<int>   indices(vector<int> &numbers , int target) {

    sort(numbers.begin() , numbers.end());
    
    int n = numbers.size();
    int i = 0;
    int j = n-1;

    vector<int> ans ;

    while (i<j){
        int psum = numbers[i] + numbers[j];
        if(psum>target){
            j--;
        }else if (psum<target){
            i++;

        }else{
            
            ans.push_back(i+1);
            ans.push_back(j+1); 
            return ans;
        }
        

    }
return {};


}
int main(){

    int target = 9;

    vector<int> numbers = {2,7,11,15};

    vector<int>  result  = indices(numbers , target);
    

    for (int  velue : result)
    {
        cout<<velue<<" ";
    }
    
return 0;

}
