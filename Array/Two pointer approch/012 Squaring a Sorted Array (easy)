https://leetcode.com/problems/squares-of-a-sorted-array/

#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;

vector<int> sortedSquares(vector<int>& nums) {
        int siz=nums.size();
        vector<int> neg;
        vector<int> pos;
      
        for(int i=0;i<siz;i++)
        {
            if(nums[i]<0)
            neg.push_back(nums[i]);
            else{
            pos.push_back(nums[i]);
            }

        }
        if(neg.size()==0) 
        {
            for(int i=0;i<pos.size();i++){
            pos[i]=pos[i]*pos[i];
            }
            return pos;
        }
        if(pos.size()==0) 
        {
            for(int i=0;i<neg.size();i++){
            neg[i]=neg[i]*neg[i];
            }
            reverse(neg.begin(),neg.end());
            return neg;
        }
       
        


        //squiring both the array but in case of negative we have to reverse the array
        
        for(int i=0;i<neg.size();i++)
        neg[i]=neg[i]*neg[i];

        reverse(neg.begin(),neg.end());

        for(int i=0;i<pos.size();i++)
        pos[i]=pos[i]*pos[i];

        // now we apply two pointer approch on both array and store the minimum value in res array
        int i=0,j=0;
        
        int n=neg.size();
        int m=pos.size();

        vector<int> res;
        while(i<n and j<m)
        {
            if(neg[i]<=pos[j])
            {
                res.push_back(neg[i]);
                
                i++;
            }
            else
            {
                res.push_back(pos[j]);
                
                
                j++;
            }
        } 
        while(i<n)
        {
            res.push_back(neg[i]);
                i++;
        }
        while(j<m)
        {
            res.push_back(pos[j]);
                j++;
        }
        return res;
    }


    
int main(){

    vector<int> nums = {-4,-1,0,3,10};

vector<int> result = sortedSquares(nums );

for (int  i = 0; i < result.size(); i++){
    cout<<result[i]<<" ";
}

return 0;

}
