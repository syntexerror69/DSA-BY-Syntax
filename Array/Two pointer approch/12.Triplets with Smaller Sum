https://www.geeksforgeeks.org/problems/count-triplets-with-sum-smaller-than-x5549/1

#include<iostream>
#include<vector>
#include<algorithm>
#include<cmath>
using namespace std;

int threesumtargetsmaller(int arr[], int n , int target){
    sort(arr , arr+n);

    int count  = 0;

    for (int i = 0; i < n-1; i++){
        int j = i+1;
        int k = n-1;

        while (j<k){
            int tsum = arr[i]+arr[j]+arr[k];

            if (tsum<target){
                count = count +k-j;
                j++;

            }else if (tsum>=target){
                k--;

            }
        }


    }

    return count;
    
}




int main(){
    int n = 4;
    int target = 2;
    int arr[n] = {-2, 0, 1, 3};
    threesumtargetsmaller(arr, n, target);

    
    return 0;
}
